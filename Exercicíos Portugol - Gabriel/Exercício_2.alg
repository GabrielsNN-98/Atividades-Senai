algoritmo "Exercício 2"
// Função :
// Autor :
// Data : 10/10/2018
// Seção de Declarações 
var
raio,area,volume: real
inicio
// Seção de Comandos
   escreval("Informe um valor para o raio de uma esfera: ")
   leia(raio)
   area <- 4*pi*raio*raio
   volume <- 4/3*pi*raio*raio
   escreval("A área da esfera é: ",area)
   escreval("O volume da esfera é: ",volume)
fimalgoritmo
